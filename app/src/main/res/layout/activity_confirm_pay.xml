<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmPay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ScrollView android:id="@+id/change_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <RelativeLayout android:id="@+id/content_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >



                    <RelativeLayout android:id="@+id/change_password"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <View
                            android:id="@+id/_bg__register_ek2"
                            android:layout_width="414dp"
                            android:layout_height="750dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/lavender" />

                        <View
                            android:id="@+id/rectangle_5"
                            android:layout_width="414dp"
                            android:layout_height="620dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="141dp"
                            android:background="@drawable/shape4" />


                        <RelativeLayout android:id="@+id/sign_in_button_ek1"
                            android:layout_marginTop="752dp"
                            android:layout_marginStart="126dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                        </RelativeLayout>

                        <RelativeLayout android:id="@+id/confirm_password"
                            android:layout_marginTop="545dp"
                            android:layout_marginStart="43dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >


                        </RelativeLayout>


                        <RelativeLayout android:id="@+id/phonee"
                            android:layout_marginTop="605dp"
                            android:layout_marginStart="43dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                        </RelativeLayout>


                        <RelativeLayout android:id="@+id/nic_pass"
                            android:layout_marginTop="665dp"
                            android:layout_marginStart="43dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                        </RelativeLayout>


                        <RelativeLayout android:id="@+id/fn"
                            android:layout_marginTop="305dp"
                            android:layout_marginStart="43dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >


                        </RelativeLayout>


                        <TextView
                            android:id="@+id/register_ek4"
                            android:layout_width="276dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="75dp"
                            android:layout_marginTop="207dp"
                            android:text="Enter your details"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/regBtn"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/confirmPwd"
                            android:layout_marginStart="130dp"
                            android:layout_marginTop="60dp"
                            android:background="@drawable/shape2"
                            android:text="Next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/fullname"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="300dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:paddingStart="20dp" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_below="@id/fullname"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_below="@id/email"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Phone"
                            android:inputType="phone"
                            android:paddingStart="20dp" />

                        <EditText
                            android:id="@+id/confirmPwd"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="22dp"
                            android:layout_below="@+id/phone"
                            android:background="@drawable/img_btn1"
                            android:hint="NIC or Passport number"
                            android:inputType="text"
                            android:paddingStart="20dp" />

                    </RelativeLayout>


                </RelativeLayout>

            </ScrollView>
        </HorizontalScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>