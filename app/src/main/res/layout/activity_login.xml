<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <RelativeLayout android:id="@+id/content_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >


                <RelativeLayout
                    android:id="@+id/Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp">

                    <View
                        android:id="@+id/view"
                        android:layout_width="414dp"
                        android:layout_height="766dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/lavender" />

                    <View
                        android:id="@+id/shape3"
                        android:layout_width="414dp"
                        android:layout_height="562dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="325dp"
                        android:background="@drawable/shape3" />


                    <RelativeLayout
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="557dp">

                        <EditText
                            android:id="@+id/Login_Pwd"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:paddingStart="20dp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="43dp"
                        android:layout_marginTop="466dp">

                        <EditText
                            android:id="@+id/Login_Uname"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Username"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/sign_in_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="133dp"
                        android:layout_marginTop="683dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/loginBtn"
                            android:layout_width="149dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/shape2"
                            android:text="Sign in"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="21sp" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="194.5dp"
                        android:layout_height="35.5dp"
                        android:layout_marginLeft="201dp"
                        android:layout_marginTop="629dp"
                        android:linksClickable="true"
                        android:text="Forgot Password?"
                        android:textColor="@color/blue1"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/login_txt"
                        android:layout_width="145dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="156dp"
                        android:layout_marginTop="367dp"
                        android:text="Login"
                        android:textColor="@color/black"
                        android:textSize="38sp" />

                    <TextView
                        android:layout_width="314.5dp"
                        android:layout_height="31.5dp"
                        android:layout_marginLeft="61dp"
                        android:layout_marginTop="813dp"
                        android:text="Don't have an account ?"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/clickhereBtn"
                        android:layout_width="314.5dp"
                        android:layout_height="31.5dp"
                        android:layout_marginLeft="250dp"
                        android:layout_marginTop="813dp"
                        android:text="Click Here"
                        android:textColor="@color/blue1"
                        android:textSize="17sp" />


                    <RelativeLayout
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="85dp">

                        <ImageView
                            android:id="@+id/logo_main"
                            android:layout_width="320dp"
                            android:layout_height="320dp"
                            android:layout_marginStart="-25dp"
                            android:layout_marginTop="-70dp"
                            android:contentDescription="logo_main"
                            android:src="@drawable/logo_main" />

                        <TextView
                            android:id="@+id/welcome_to_rail__trip"
                            android:layout_width="216.5dp"
                            android:layout_height="40.5dp"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="180dp"
                            android:text="Welcome to Train Com"
                            android:textColor="@color/white"
                            android:textSize="21sp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>
    </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>