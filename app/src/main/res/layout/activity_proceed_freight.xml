<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".change_pwd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ScrollView android:id="@+id/change_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <RelativeLayout android:id="@+id/content_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >


                    <RelativeLayout
                        android:id="@+id/change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                        <View
                            android:id="@+id/_bg__register_ek2"
                            android:layout_width="414dp"
                            android:layout_height="750dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/lavender" />

                        <View
                            android:id="@+id/rectangle_5"
                            android:layout_width="414dp"
                            android:layout_height="620dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="171dp"
                            android:background="@drawable/shape4" />


                        <RelativeLayout
                            android:id="@+id/sign_in_button_ek1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="126dp"
                            android:layout_marginTop="752dp">

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/confirm_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="545dp">


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/phonee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="605dp">

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/nic_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="665dp">

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/fn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="305dp">


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/logo_ek2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="101dp"
                            android:layout_marginTop="41dp">

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="320dp"
                                android:layout_height="320dp"
                                android:layout_marginStart="-55dp"
                                android:layout_marginTop="-80dp"
                                android:contentDescription="logo"
                                android:src="@drawable/logo_main" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/selectBtn"
                            android:layout_width="120dp"
                            android:layout_height="30sp"
                            android:layout_below="@id/receiver"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="65dp"
                            android:background="@color/teal_700"
                            android:text="Select file"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/uploadBtn"
                            android:layout_width="120dp"
                            android:layout_height="30sp"
                            android:layout_below="@id/receiver"
                            android:layout_marginStart="230dp"
                            android:layout_marginTop="65dp"
                            android:background="@color/teal_700"
                            android:text="Upload file"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/regBtn"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/receiver"
                            android:layout_marginStart="100dp"
                            android:layout_marginTop="180dp"
                            android:layout_marginBottom="50dp"
                            android:background="@drawable/shape2"
                            android:text="Proceed with payment"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/fullname"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="250dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:paddingStart="20dp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_below="@id/fullname"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Address"
                            android:inputType="text"
                            android:paddingStart="20dp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_below="@id/address"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Phone"
                            android:inputType="phone"
                            android:paddingStart="20dp" />

                        <EditText
                            android:id="@+id/NIC"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_below="@+id/phone"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/img_btn1"
                            android:hint="NIC"
                            android:inputType="text"
                            android:paddingStart="20dp" />

                        <EditText
                            android:id="@+id/receiver"
                            android:layout_width="327dp"
                            android:layout_height="49dp"
                            android:layout_below="@+id/NIC"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/img_btn1"
                            android:hint="Name of receiver"
                            android:inputType="text"
                            android:paddingStart="20dp" />

                        <TextView
                            android:id="@+id/Submit_bill_txt"
                            android:layout_width="276dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="25dp"
                            android:layout_below="@id/receiver"
                            android:text="Submit purchase bills:"
                            android:textAlignment="center"
                            android:textColor="@color/lavender"
                            android:textSize="20sp" />


                    </RelativeLayout>


                </RelativeLayout>

            </ScrollView>
        </HorizontalScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>