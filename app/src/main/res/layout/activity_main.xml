<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="wrap_content" >

            <ScrollView android:id="@+id/make_reservation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        <RelativeLayout android:id="@+id/page_make_reservation_ek1"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="1000dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape1" />

            <View
                android:id="@+id/recLayout"
                android:layout_width="414dp"
                android:layout_height="1100dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="141dp"
                android:background="@drawable/shape1" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/trainbooking"
                android:layout_width="355dp"
                android:layout_height="178dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/img_btn1"
                android:src="@drawable/train_pic1" />

            <TextView
                android:id="@+id/train_booking"
                android:layout_width="177.5dp"
                android:layout_height="47.5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="320dp"
                android:text="Train Booking"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/todays_schedule"
                android:layout_width="355dp"
                android:layout_height="178dp"
                android:layout_below="@+id/trainbooking"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/img_btn1"
                android:src="@drawable/train_pic2" />

            <TextView
                android:id="@+id/today_schedule"
                android:layout_width="202.5dp"
                android:layout_height="47.5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="160dp"
                android:layout_below="@+id/train_booking"
                android:text="Today Schedule"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/resort_booking"
                android:layout_width="355dp"
                android:layout_height="178dp"
                android:layout_below="@+id/todays_schedule"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/img_btn1"
                android:src="@drawable/train_pic3" />

            <TextView
                android:id="@+id/railway_resorts_booking"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="160dp"
                android:layout_below="@+id/today_schedule"
                android:layout_width="294.5dp"
                android:layout_height="47.5dp"
                android:text="Railway Resort Booking"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/travel_sri_lanka"
                android:layout_width="355dp"
                android:layout_height="178dp"
                android:layout_below="@+id/resort_booking"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/img_btn1"
                android:src="@drawable/travel_pic" />

            <TextView
                android:id="@+id/travel"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="160dp"
                android:layout_below="@+id/railway_resorts_booking"
                android:layout_width="202.5dp"
                android:layout_height="47.5dp"
                android:text="Travel"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ViewStreet"
                android:layout_width="355dp"
                android:layout_height="178dp"
                android:layout_below="@+id/travel_sri_lanka"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/img_btn1"
                android:src="@drawable/street_pic" />

            <TextView
                android:id="@+id/View_Street"
                android:layout_width="294.5dp"
                android:layout_height="47.5dp"
                android:layout_below="@+id/travel"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="160dp"
                android:text="View Street"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/lavender"
                android:elevation="4dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container"/>

        </RelativeLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="310dp"
                android:layout_height="310dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="-75dp"
                android:src="@drawable/logo_main" />

        </RelativeLayout>
            </ScrollView>
        </HorizontalScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/lavender"
        app:itemTextColor="@color/lavender"/>

</androidx.drawerlayout.widget.DrawerLayout>