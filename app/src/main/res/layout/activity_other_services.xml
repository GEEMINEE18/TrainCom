<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmPay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ScrollView android:id="@+id/change_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <RelativeLayout android:id="@+id/content_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >



                    <RelativeLayout android:id="@+id/change_password"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <View
                            android:id="@+id/_bg__register_ek2"
                            android:layout_width="414dp"
                            android:layout_height="750dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/lavender" />

                        <View
                            android:id="@+id/rectangle_5"
                            android:layout_width="414dp"
                            android:layout_height="620dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="141dp"
                            android:background="@drawable/shape4" />

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="-60dp"
                            android:contentDescription="logo"
                            android:src="@drawable/logo_main" />

                        <TextView
                            android:id="@+id/click_txt1"
                            android:layout_width="350dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="180dp"
                            android:linksClickable="true"
                            android:text="Display Ad at railway stations and other railway premises"
                            android:textColor="@color/blue1"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/click_txt2"
                            android:layout_width="350dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/click_txt1"
                            android:linksClickable="true"
                            android:text="Photography or filming at railway premises and the trains"
                            android:textColor="@color/blue1"
                            android:textSize="19sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/click_txt3"
                            android:layout_width="350dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/click_txt2"
                            android:linksClickable="true"
                            android:text="Obtaining space in railway premises for business purposes"
                            android:textColor="@color/blue1"
                            android:textSize="19sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/click_txt4"
                            android:layout_width="350dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_below="@+id/click_txt3"
                            android:linksClickable="true"
                            android:text="Issuing railway tickets"
                            android:textColor="@color/blue1"
                            android:textSize="19sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/click_txt5"
                            android:layout_width="350dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/click_txt4"
                            android:linksClickable="true"
                            android:text="Reservation of retiring rooms at railway stations"
                            android:textColor="@color/blue1"
                            android:textSize="19sp"
                            android:textStyle="bold"/>


                    </RelativeLayout>


                </RelativeLayout>

            </ScrollView>
        </HorizontalScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>